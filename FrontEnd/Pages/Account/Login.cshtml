@page
@model FrontEnd.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Se connecter";
}

<div class="container mt-5" style="max-width: 500px;">
    <h2 class="mb-4 text-center">Connexion</h2>
    <form method="post" class="card p-4 shadow-sm">
        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label">Adresse email</label>
            <input asp-for="Input.Email" class="form-control" placeholder="ex: medecin@test.com" />
        </div>
        <div class="mb-3">
            <label asp-for="Input.Password" class="form-label">Mot de passe</label>
            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Mot de passe" />
        </div>
        <button type="submit" class="btn btn-primary w-100">Se connecter</button>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger text-center">
                @Model.ErrorMessage
            </div>
        }

    </form>
    <div class="text-center mt-3">
        <p>Pas encore de compte ? <a asp-page="/Account/Register">Inscrivez-vous ici</a></p>
    </div>
</div>
