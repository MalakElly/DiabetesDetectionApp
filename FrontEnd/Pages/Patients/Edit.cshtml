@page "{id:int}"
@model FrontEnd.Pages.Patients.EditModel
@{
    ViewData["Title"] = "Modifier Patient";
}

<h2>Modifier Patient</h2>

<form method="post">
    <input type="hidden" asp-for="Patient.Id" />

    <div>
        <label>Prénom</label>
        <input asp-for="Patient.FirstName" />
    </div>
    <div>
        <label>Nom</label>
        <input asp-for="Patient.LastName" />
    </div>
    <div>
        <label>Date de naissance</label>
        <input asp-for="Patient.DateOfBirth" type="date" />
    </div>
    <div>
        <label>Sexe</label>
        <input asp-for="Patient.Gender" />
    </div>
    <div>
        <label>Adresse</label>
        <input asp-for="Patient.Address" />
    </div>
    <div>
        <label>Téléphone</label>
        <input asp-for="Patient.PhoneNumber" />
    </div>
    <button type="submit">Enregistrer</button>
</form>
